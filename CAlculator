   <!-- <link rel="stylesheet" href="style.css"> -->
    <style>

.calculator {
    width: 300px;
    margin: 50px auto;
    padding: 20px;
    border: 2px solid black;
}
button {
    width: 60px;
    height: 60px;
    margin: 5px;
    font-size: 24px;
}
#display {
    width: 285px;
    height: 50px;
    margin-bottom: 20px;
    padding: 5px;
    font-size: 24px;
    text-align: right;
}
table {
    width: 100%;
}
    </style>
